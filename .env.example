# Node Environment (development, test, production)
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database-name?retryWrites=true&w=majority
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database-name?retryWrites=true&w=majority

# JWT Secret for Authentication
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_secure_jwt_secret_key_here

# Server Configuration
PORT=3000

# Instagram Basic Display API
VITE_INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
VITE_INSTAGRAM_USER_ID=your_instagram_user_id

# Facebook Graph API
VITE_FACEBOOK_ACCESS_TOKEN=your_facebook_page_access_token
VITE_FACEBOOK_PAGE_ID=your_facebook_page_id

# Debug Settings
DEBUG=true
LOG_LEVEL=debug
